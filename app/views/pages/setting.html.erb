<h1>NEW GAME!</h1>

<ul class="list-inline">
  <li><%= @letters[0] %></li>
  <li><%= @letters[1] %></li>
  <li><%= @letters[2] %></li>
  <li><%= @letters[3] %></li>
  <li><%= @letters[4] %></li>
  <li><%= @letters[5] %></li>
  <li><%= @letters[6] %></li>
  <li><%= @letters[7] %></li>
  <li><%= @letters[8] %></li>
  <li><%= @letters[9] %></li>
</ul>

<p>What is the longest word you can find?</p>
<div class="input">
  <form action="/receive" method="POST">
  <input type="text" name="guess" placeholder="Type in your guess!">
  <input type="submit" value="CHECK!">
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
